@model Products_image.Models.Products;

<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <h1>Add Products</h1>
            <div class="mb-3">
                <label class="form-label">Product_Name</label>
                <input type="text" class="form-control" asp-for="ProdName">
            </div>
            <div class="mb-3">
                <label class="form-label">Product_Description</label>
                <input type="text" class="form-control" asp-for="ProdDesc">
            </div>
            <div class="mb-3">
                <label class="form-label">Product_Price</label>
                <input type="text" class="form-control" asp-for="ProdPrice">
            </div>
            <div class="mb-3">
                <label class="form-label">Product_Image</label>
                <input type="file" class="form-control" asp-for="ProdImage" name="prodImage">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>